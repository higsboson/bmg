                if (i==0) {tmpltStr=data[i].TmpltId}
                else {tmpltStr=tmpltStr+","+data[i].TmpltId}}
              $("#templates").val(tmpltStr);
              showInvite(0,eventId,eventType,rcvrName,dtTime);
            }) //end get templates
