      if (getCookie("NewRegistryCreated") != "")
      {
        $('#personalizeHeading').text("Personalize - " + getCookie('event_name'))
        $('#saveMessageButton').attr("onclick","saveMessage('" + getCookie('wishlistIdReference') + "')")
        $('#saveMessageDefault').attr("onclick","saveMessageDefault('" + getCookie('wishlistIdReference') + "')")
